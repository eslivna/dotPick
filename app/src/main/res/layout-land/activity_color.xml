<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.esliv.dotpicktr.fragments.ColorPickerFragment">

    <SeekBar
        android:id="@+id/seekBarR"
        android:layout_width="226dp"
        android:layout_height="22dp"
        android:max="255"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/numberR"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintHorizontal_bias="0.706" />

    <SeekBar
        android:id="@+id/seekBarG"
        android:max="255"
        android:layout_width="226dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/numberG"
        app:layout_constraintTop_toBottomOf="@+id/seekBarR"
        app:layout_constraintHorizontal_bias="0.701" />

    <SeekBar
        android:id="@+id/seekBarB"
        android:max="255"
        android:layout_width="226dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/numberB"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.706"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBarG" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.125"
        app:layout_constraintLeft_toRightOf="@+id/rgbView"
        android:layout_marginLeft="111dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/rgbView"
        android:layout_marginLeft="111dp" />

    <TextView
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintLeft_toRightOf="@+id/rgbView"
        android:layout_marginLeft="111dp" />

    <TextView
        android:id="@+id/numberR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="51dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

    <TextView
        android:id="@+id/numberG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberR"
        tools:text="100" />

    <TextView
        android:id="@+id/numberB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="23dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberG"
        app:layout_constraintVertical_bias="0.125"
        tools:text="100" />

    <TextView
        android:id="@+id/rgbView"
        android:layout_width="139dp"
        android:layout_height="126dp"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.238" />

</android.support.constraint.ConstraintLayout>
